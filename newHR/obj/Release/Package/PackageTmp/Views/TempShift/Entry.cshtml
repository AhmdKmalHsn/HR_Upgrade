        if (rows_selected.length > 0) {
            for (var i = 0; i < rows_selected.length; i++) {
                //console.log(rows_selected[i]);
              let sqlx= `
 declare  @@f date='${$("#dateFrom").val()}', @@t date='${$("#dateTo").val()}', @@emp int='${rows_selected[i]}', @@sh int=${$("#shiftId").val()};
