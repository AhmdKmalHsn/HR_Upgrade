<script>
    $(".tabs").tabs();
    var data = readSQL(`select e.Id,e.FirstName+' '+e.MidelName+' '+e.LastName'Name',e.FileNumber,d.Name'Dept',b.ShiftId from employees e left join BasicBayWorks b on b.EmployeeId=e.id left join Departements d on e.DepartementId=d.Id left join personals p on p.id=e.personalid where p.statusid=1 `);
    console.log(data);
    var table = $("#allEmpTable").DataTable({
        data: data,
        columns: [
            { data: "Id", title: '' },
            { data: "Id", title: "Id" },
            { data: "Name", title: "name" },
            { data: "FileNumber", title: "File Number" },
            { data: "Dept", title: "Department" },
            { data: "ShiftId", title: "Shift Id" },

        ],
        'columnDefs': [
            {
                'targets': 0,
                'checkboxes': {
                    'selectRow': true
                }
            }
        ],
        'select': {
            'style': 'multi'
        },
        'order': [[1, 'asc']]
    });

    $('#submit').on('click', function (e) {
        var rows_selected = table.columns(0).checkboxes.selected()[0];
        //console.log(rows_selected.length);
        let fail = 0, success = 0;

        if (rows_selected.length > 0) {
            for (var i = 0; i < rows_selected.length; i++) {
                //console.log(rows_selected[i]);
                let sqlx = `
 declare  @@f date='${$("#dateFrom").val()}', @@t date='${$("#dateTo").val()}', @@emp int='${rows_selected[i]}', @@sh int=${$("#shiftId").val()};
declare @@dt date=@@f
while @@dt<=@@t
begin
if not exists(
select * from Attendances where DateFrom=@@dt and  EmployeeId=@@emp
)
begin
insert into  Attendances(DateFrom,EmployeeId,ShiftId)values (@@dt,@@emp,@@sh)
end
else
begin
update  Attendances set ShiftId=@@sh
where employeeid=@@emp and DateFrom=@@dt
set @@dt=dateadd(Day,1,@@dt);
end
end`
                //console.log(sqlx);
                if (excuteSQL(sqlx) == 1) success++;
                else fail++;
                console.log(`success:${success} fail:${fail}`);
            }
        }



        var checker = setInterval(check, 1500);
        function check() {

            if (rows_selected.length == (parseFloat(fail) + parseFloat(success))) {
                alert(`compelete! success:${success} fail:${fail}`);
                clearInterval(checker);
            }
            else {
                //play();
            }
        }

    });
    $(".dialogEmp").dialog({
        autoOpen: false,
        width: 900,
        height: 700,
        title: "Select Employee",
    });
    $("#shiftId").on('change', function () {
        var data, dom;
        if ($("#dateFilter").is(":checked")) {
            data = readSQL(`
        select  a.DateFrom,FileNumber,KnownAs,(select name from Departements where id=DepartementId)'dept' 
        from Attendances a left join Employees e on e.id=a.EmployeeId 
        where a.DateFrom >='${$("#dateFrom").val()}' and  a.DateFrom <='${$("#dateTo").val()}' and ShiftId=${$("#shiftId").val()} order by DateFrom`);
            dom = '<table class="table">'

            data.map(function (i) {
                dom += `<tr><td>${i.DateFrom.substr(0,10)}</td><td>${i.FileNumber}</td><td>${i.KnownAs}</td><td>${i.dept}</td><td><button class="btn btn-success" onclick="remove('${i.DateFrom.substr(0,10)}',${i.FileNumber})">remove</button></td></tr>`
            });
            dom += '</table>'
        }
        else {
            data = readSQL(`select distinct FileNumber,KnownAs,(select name from Departements where id=DepartementId)'dept' from Attendances a left join Employees e on e.id=a.EmployeeId where ShiftId=${$("#shiftId").val()}`);
            dom = '<table class="table">'

            data.map(function (i) {
                dom += `<tr><td>${i.FileNumber}</td><td>${i.KnownAs}</td><td>${i.dept}</td></tr>`
            });
            dom += '</table>'
        }

        $(".result").html(dom);
        //$(".result").DataTable();
    });
    $("#choose").click(function () {
        $(".dialogEmp").dialog("open");
    });
