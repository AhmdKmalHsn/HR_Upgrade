<script>
    $.ajax({
        url: 'getPeriods',
        method:'post',
        success: function (res) {
            const data = JSON.parse(res);
            var columns = [];
            $.each(data[0], function (key, item) {
                var column = {
                    "data": key,
                    "title": key
                };
                columns.push(column);
            });
            
            var tb = $('#myTable').dataTable({
                "stateSave": true,
                "destroy": true,
                "data": data,
                "columns": [
                            columns[0],
                            {
                                'data': columns[1].data,
                                'title': 'من',
                                'render': function (data, type, row, meta) {
                                    return data.substr(0, 10);
                                     
                                }
                            },
                            {
                                'data': columns[2].data,
                                'title': 'الي',
                                'render': function (data, type, row, meta) {
                                    return data.substr(0, 10);

                                }
                            },
                             {
                                 'data': columns[3].data,
                                 'title': 'الحالة',
                                 'render': function (data, type, row, meta) {
                                     return data=='C'? 'مغلق':'مفتوح';

                                 }
                             }
                           ]
            });
        }
    });
</script>
<script>
    $('#myTable').on('click', 'td', function () {
        var table = $('#myTable').DataTable();
        var data = table.row(this).data();
        var index = table.column(this).index();
        //console.log(data);
        $.ajax({
            url: 'getPeriods',
            //type:'json',
            data: { id: data.Id },
            success: function (res) {
                const data = JSON.parse(res);
                console.log(data);
                $('#id1').val(data[0].Id);
                $("#dateFrom1").val(data[0].DateFrom.substr(0,10));
                $("#dateTo1").val(data[0].DateTo.substr(0,10));
                $("#status1").val(data[0].status);
            }
        });
        $('#crudForm').modal('show');
    });
    function addSubmit()
    {
        $.ajax({
            url: 'createPeriod',
            //type:'json',
            data: {
                DateFrom: $("#dateFrom0").val(),
                DateTo: $("#dateTo0").val(),
                status: $("#status0").val()
            },
            success: function (res) {
                alert("success");
            }
        });
    }
    function editSubmit() {

        $.ajax({
            url: 'updatePeriod',
            //type:'json',
            data: {
                Id: $('#id1').val(),
                DateFrom: $("#dateFrom1").val(),
                DateTo: $("#dateTo1").val(),
                status: $("#status1").val()
            },
            success: function (res) {
                alert("success");
                window.location.reload();
            }
        });
    }
</script>
<script>
function openCity(evt, cityName) {
  var i, tabcontent, tablinks;
  tabcontent = document.getElementsByClassName("tabcontent");
  for (i = 0; i < tabcontent.length; i++) {
    tabcontent[i].style.display = "none";
  }
  tablinks = document.getElementsByClassName("tablinks");
  for (i = 0; i < tablinks.length; i++) {
    tablinks[i].className = tablinks[i].className.replace(" active", "");
  }
  document.getElementById(cityName).style.display = "block";
  evt.currentTarget.className += " active";
}
</script>

