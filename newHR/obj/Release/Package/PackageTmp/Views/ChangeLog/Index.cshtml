    </table>
</div>
<script>
    $("#dialog").dialog({
        autoOpen: false,
        show: {
            effect: "blind",
            duration: 10
        },
        hide: {
            effect: "explode",
            duration: 10
        },
        modal: true,
        buttons: {
            Ok: function () {
                $(this).dialog("close");
            }
        }
    });
    function showDetails(id) {
        //$("#Id").html(id);
        $.ajax({
            url: 'getDetails',
            data:{fno:id},
            success: function (res) {
                const data = JSON.parse(res);
                console.log(data);
                var html = '';
                $.each(data, function (key, item) {
                   html+='<tr><td>'+item.columnName+'</td><td>'+item.Value1+'</td></tr>';
                });
                $("#dialogueTabel").html(html);
                $("#dialog").dialog("open");
            }
        });
    
        
    }
</script>
