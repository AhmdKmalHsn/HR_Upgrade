                <form id="login-form" action="/home/login" method="post" class="box">
                    <img class="mb-4" src="~/assets/img/group.png" alt="Logo" width="72" height="57">
                    <h1>تسجيل الدخول</h1>
                    <p class="text-muted">من فضلك ادخل البيانات</p>
                    <input type="text" name="UserName" placeholder="اسم المستخدم">
                    <input type="password" name="Password" placeholder="الباسورد">
                    <input type="submit" value="تسجيل">
                </form>

                <!-- </div>
